<div class="container mx-auto px-4 py-8">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
      <div class="text-center">
        <h1 class="text-6xl font-bold text-red-500 mb-4">
          <%= error.status %>
        </h1>
        <h2 class="text-2xl font-semibold text-gray-700 mb-6">
          <%= error.message %>
        </h2>
        <div class="bg-gray-100 p-4 rounded-md text-left overflow-auto">
          <pre class="text-sm text-gray-600 whitespace-pre-wrap">
            <%= error.stack %>
          </pre>
        </div>
        <div class="mt-8">
          <a href="/" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition-colors">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>